<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentResult"
    tools:context=".ResultPlanetFragment">

    <ImageView
        android:id="@+id/imagePlanet"
        android:layout_width="240dp"
        android:layout_height="234dp"
        android:layout_marginEnd="171dp"
        app:layout_constraintBottom_toTopOf="@+id/textPlanetName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPlanetName"
        android:layout_width="406dp"
        android:layout_height="57dp"
        android:layout_marginBottom="440dp"
        android:gravity="center"
        android:text="Sample"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/decriptionPlanet"
        android:layout_width="377dp"
        android:layout_height="376dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="24dp"
        android:text="TextView"
        android:textStyle="italic"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPlanetName" />

</androidx.constraintlayout.widget.ConstraintLayout >